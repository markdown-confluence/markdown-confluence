{
  "extends": "../../tsconfig.json",
  "compilerOptions":{
    "baseUrl":".",
    "rootDir": "src",
    "outDir": "dist",
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "listEmittedFiles": true,
    "module":"ESNext",
    "target":"ESNext",
  },
  "include":[ "**/*.ts", "**/*.tsx", "**/**.js", "**/**.jsx", ],
  "exclude": ["node_modules", "packages/**/dist/*", "dist/*", "**/*.test.ts", "**/jest.config.ts"]
}