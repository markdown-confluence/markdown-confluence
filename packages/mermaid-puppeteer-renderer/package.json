{
    "name": "@markdown-confluence/mermaid-puppeteer-renderer",
    "version": "5.5.0",
    "description": "This library allows you to publish your notes to Confluence",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
